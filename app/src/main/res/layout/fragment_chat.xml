<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".extra.CHatFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_close_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:backgroundTint="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
    <EditText
        android:id="@+id/editText"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Enter your text"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="131dp"
        android:background="#3f2b258e"
        android:text="Assalomu aleykum, tushunarli ... " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="213dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:background="#3f267c37"
        android:gravity="right"
        android:text="Salom men Avto kredit haqida malumot bilmoqchi edim " />

    <TextView
        style="@style/MainText"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Universalbank operatori" />
</RelativeLayout>