<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="2.5dp"
    android:paddingRight="2.5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:layout_height="match_parent"
    android:background="@drawable/layer_3"
    tools:context="com.example.dellgaming.myapplication.activity.MainPage">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:src="@drawable/text"
        android:layout_below="@+id/logo"
         />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="112.5dp"
        android:layout_marginRight="112.5dp"
        android:text="@string/pin_kod"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/rounded_rectangle" />

    <ImageView
        android:id="@+id/rectangle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="35px"
        android:layout_marginTop="64px"
        android:visibility="visible"
        app:srcCompat="@drawable/rectangle_2" />

    <ImageView
        android:id="@+id/rectangle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/rectangle_1"
        android:layout_marginLeft="20px"
        android:layout_toEndOf="@+id/rectangle_1"
        android:visibility="visible"
        app:srcCompat="@drawable/rectangle_2" />

    <ImageView
        android:id="@+id/rectangle_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/rectangle_2"
        android:layout_marginLeft="20px"
        android:layout_toEndOf="@+id/rectangle_2"
        android:visibility="visible"
        app:srcCompat="@drawable/rectangle_2" />

    <ImageView
        android:id="@+id/rectangle_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rectangle_3"
        android:layout_marginLeft="20px"
        android:layout_toEndOf="@+id/rectangle_3"
        android:visibility="visible"
        app:srcCompat="@drawable/rectangle_2" />

    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_above="@+id/rectangle_2"
        android:layout_centerHorizontal="true"></com.andrognito.pinlockview.IndicatorDots>

    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:keypadButtonSize="72dp"
        app:keypadShowDeleteButton="true"
        app:keypadTextColor="@color/white"
        app:keypadTextSize="20dp" />
</RelativeLayout>